<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtRecharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recharge:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtRechargeAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint = "Recharge Amount (VND)"
        android:inputType="number"
        android:layout_below="@id/txtRecharge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/edtRechargeAmount">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:background="#E0E0E0"
            android:clickable="true"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnRecharge"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:background="#E0E0E0"
            android:clickable="true"
            android:text="Redirect to Momo Wallet"

            />

    </LinearLayout>

</RelativeLayout>


